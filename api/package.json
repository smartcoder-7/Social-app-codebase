{
  "name": "studium-api",
  "version": "0.0.1",
  "private": true,
  "description": "Studium API",
  "scripts": {
    "tsc": "tsc",
    "clean": "rm -rf dist/*",
    "lint": "eslint 'src/**/*.ts'",
    "dev": "NODE_ENV=development nodemon ./src/server.ts --verbose",
    "start-dev": "yarn generate-schema  && node -r ts-node/register -r dotenv/config ./src/server.ts",
    "generate-migration": "knex migrate:make --knexfile knexfile.ts -x ts ",
    "migrate": "knex migrate:latest --knexfile knexfile.ts",
    "rollback": "knex migrate:rollback --knexfile knexfile.ts",
    "seed": "knex seed:run --knexfile knexfile.ts",
    "test": "jest",
    "generate-schema": "mkdir -p ./dist/src/gqlTypes && awk 1 ./src/gqlTypes/*.graphql > ./dist/src/gqlTypes/schema.graphql"
  },
  "author": "Studium",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.10.1",
    "bcrypt": "^3.0.8",
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.0",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.0.13",
    "graphql-tools": "^4.0.7",
    "graphql-type-json": "^0.3.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.4.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "objection": "^2.1.2",
    "pg": "^7.18.0",
    "uuid": "^3.4.0",
    "validator": "^11.1.0",
    "winston": "^3.2.1",
    "yarn": "^1.22.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/graphql-type-json": "^0.3.2",
    "@types/lodash": "^4.14.149",
    "@types/moment": "^2.13.0",
    "@types/node": "^13.5.0",
    "@types/uuid": "^3.4.6",
    "@types/validator": "^10.11.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.6.2",
    "tsc-watch": "^4.1.0",
    "typescript": "^3.7.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "build",
      "public",
      "db"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start-dev",
    "ext": "ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --fix",
      "pre-push": "yarn lint --fix"
    }
  }
}